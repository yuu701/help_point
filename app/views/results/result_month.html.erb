<div class="result-month-wrapper">
  <div class="container">
    <div class="row">
      <div class="result-month-container">
        <% if parent_logged_in? && @applies.length != 0%>
          <%= link_to "承認まちお手伝いがあります", parents_applies_path %>
        <% elsif child_logged_in? && @requests.length != 0 %>
          <%= link_to "お手伝いを頼まれています", children_requests_path %>
        <% end%>
        <div class="text-color point-container">
          <h2><%= @search_month.month %>月のポイント</h2>
          <% @children.each do |child|%>
            <div class="child-point">
              <p class="text-right child-name"><%= child.name %></p>
              <p>：</p>
              <p><%= child.total_point(@search_date) %></p>
            </div>
          <% end %>
        </div>
        
        <%= month_calendar events: @results do |date, results| %>
          <%= date.day %>
          
          <%#= @displays[results] %>
          <% displayed_children = [] %>
          <% results.each do |result| %>
            <%if(!displayed_children.include?(result.child)) %>
             <%= link_to result.child.name, results_path(date: result.completion_date) %>
            <% end %>
            <% displayed_children.push(result.child) %>
          <% end %>  
        <% end %>
      </div>
    </div>
  </div>
</div>